<?xml version="1.0" encoding="utf-8" ?>
<resources>

  <style name="dialogAnimation">
    <item name="android:windowEnterAnimation">@anim/slide_up</item>
    <item name="android:windowExitAnimation">@anim/slide_right</item>
  </style>

  <style name="Theme.Ahbab" parent="Theme.AppCompat">
    <item name="colorPrimary">@color/primaryColor</item>
    <item name="colorPrimaryDark">@color/primaryDarkColor</item>
    <item name="colorAccent">@color/accent</item>
  </style>

  <style name="Widget.CardContent" parent="android:Widget">
    <item name="android:paddingLeft">16dp</item>
    <item name="android:paddingRight">16dp</item>
    <item name="android:paddingTop">24dp</item>
    <item name="android:paddingBottom">24dp</item>
    <item name="android:orientation">vertical</item>
  </style>

  <style name="Theme.Ahbab.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

  <style name="Theme.Ahbab.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

  <style name="spinner_style">
    <item name="android:background">@drawable/gradient_spinner</item>
  </style>

  <style name="TextAppearance.App.TextInputLayout" parent="@android:style/TextAppearance">
    <item name="android:textColor">#8C8190</item>
    <item name="android:textSize">25sp</item>
  </style>
  
  
  <style name="SplashTheme" parent="SplashTheme.Base">
    <item name="colorPrimary">@color/primaryColor</item>
    <item name="colorPrimaryDark">@color/primaryDarkColor</item>
    <item name="colorAccent">@color/accent</item>
  </style>
  <style name="SplashTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="android:windowBackground">@drawable/splash_screen</item>
  </style>

  <!--ProgressBar Theme-->
  <style name="Theme.Ahbab.WhiteAccent">
    <item name="colorAccent">#FFFFFF</item>
  </style>
</resources>
